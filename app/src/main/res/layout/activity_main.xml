<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_bg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/fNameTF"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/txtfield"
        android:ems="10"
        android:paddingLeft="15dp"
        android:fontFamily="@font/poppins_extralight"
        android:textColor="@color/white"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_extralight"
        android:paddingLeft="5dp"
        android:text="First name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/fNameTF"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_extralight"
        android:paddingLeft="5dp"
        android:text="Last name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/lNameTF"
        app:layout_constraintTop_toBottomOf="@+id/fNameTF" />

    <EditText
        android:id="@+id/lNameTF"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/txtfield"
        android:ems="10"
        android:fontFamily="@font/poppins_extralight"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/fNameTF"
        app:layout_constraintStart_toStartOf="@+id/fNameTF"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_extralight"
        android:paddingLeft="5dp"
        android:text="Birth date"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/bDayTF"
        app:layout_constraintTop_toBottomOf="@+id/lNameTF" />

    <EditText
        android:id="@+id/bDayTF"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/txtfield"
        android:ems="10"
        android:fontFamily="@font/poppins_extralight"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/lNameTF"
        app:layout_constraintStart_toStartOf="@+id/lNameTF"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_extralight"
        android:paddingLeft="5dp"
        android:text="Email address"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/emailTF"
        app:layout_constraintTop_toBottomOf="@+id/bDayTF" />

    <EditText
        android:id="@+id/emailTF"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/txtfield"
        android:ems="10"
        android:fontFamily="@font/poppins_extralight"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/bDayTF"
        app:layout_constraintStart_toStartOf="@+id/bDayTF"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_extralight"
        android:paddingLeft="5dp"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/passwordTF"
        app:layout_constraintTop_toBottomOf="@+id/emailTF" />

    <EditText
        android:id="@+id/passwordTF"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/txtfield"
        android:ems="10"
        android:fontFamily="@font/poppins_extralight"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="@+id/emailTF"
        app:layout_constraintStart_toStartOf="@+id/emailTF"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/viewBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:fontFamily="@font/poppins_medium"
        android:text="View"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/passwordTF"
        app:layout_constraintStart_toStartOf="@+id/passwordTF"
        app:layout_constraintTop_toBottomOf="@+id/passwordTF" />

</android.support.constraint.ConstraintLayout>
